<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackGround"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar"
            android:minHeight="?android:attr/actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <Button
                android:id="@+id/homePostBtn"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Post Item"
                android:background="#E50303"
                android:textColor="#fff"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="fitXY"
            android:src="@drawable/homeimg"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="Rent me today"
                android:textSize="32sp"
                android:textColor="#fff"
                android:paddingBottom="15dp"
                />
        </RelativeLayout>

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="330dp"
            android:layout_height="270dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            app:alignItems="flex_start"
            app:alignContent="flex_start"
            app:justifyContent="space_evenly"
            app:flexWrap="wrap"
            android:background="#c4c4c4">

            <Button
                android:id="@+id/sportsBtn"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/sports"
                android:background="#69DBDB"
                android:text="Sports"
                android:foreground="?android:attr/selectableItemBackground"
                />


            <Button
                android:id="@+id/appilianceBtn"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/appliances"
                android:background="#DBC269"
                android:text="Appiliances"
                android:foreground="?android:attr/selectableItemBackground"                />

            <Button
                android:id="@+id/insutrumentBtn"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="100dp"
                android:background="#69DB74"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/instrument"
                android:text="Instruments"
                android:foreground="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/clotheBtn"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/clothes"
                android:background="#DB69D0"
                android:text="Clothes"
                android:foreground="?android:attr/selectableItemBackground"
                />


            <Button
                android:id="@+id/toolBtn"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/tool"
                android:background="#BEDB69"
                android:text="Tools"
                android:foreground="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/rideBtn"
                android:layout_marginTop="5dp"
                android:layout_width="0dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="100dp"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/ride"
                android:background="#DB9269"
                android:text="Rides"
                android:foreground="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/nearByBtn"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Near by"
                android:foreground="?android:attr/selectableItemBackground"
                />

            <Button
                android:id="@+id/resetBtn"
                android:layout_marginTop="5dp"
                android:layout_width="30dp"
                app:layout_flexBasisPercent="32%"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Reset"
                android:foreground="?android:attr/selectableItemBackground"
                />




        </com.google.android.flexbox.FlexboxLayout>


        <Helper.ItemListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:dividerHeight="10dp"
            android:layout_margin="10dp"
            android:isScrollContainer="false"
            android:divider="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    </ScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        >

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>